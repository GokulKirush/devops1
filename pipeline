

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                bat 'javac loki.java'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'java loki'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                echo 'Deployment successful! âœ…'
            }
        }
    }
}
